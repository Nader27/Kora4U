<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Add Match"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/home_team"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:prompt="@string/home_team" />

    <Spinner
        android:id="@+id/away_team"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:prompt="@string/away_team" />

    <Spinner
        android:id="@+id/tournament"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:prompt="@string/tournament" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="100">

        <EditText
            android:id="@+id/home_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="center"
            android:inputType="number"
            android:text="—"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:text=":"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/away_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="center"
            android:inputType="number"
            android:text="—"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/Date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="date"
        android:padding="5dp"
        android:text="Select Date"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/Time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="time"
        android:padding="5dp"
        android:text="Select Time"
        android:textSize="50sp" />

    <Button
        android:id="@+id/Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Match" />
    <Button
        android:id="@+id/Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Delete Match" />

</LinearLayout>